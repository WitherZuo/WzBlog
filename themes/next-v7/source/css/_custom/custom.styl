/* 设置站点标题字体和字号 */
.site-title {
    font-size: 30px !important;
    font-weight: 500;

    +mobile() {
        font-size: 24px !important;
        font-weight: 500;
    }

    +tablet() {
        font-size: 24px !important;
        font-weight: 500;
    }
}

.posts-expand .post-meta {margin: 3px 0 20px 0;}

/* 更改文章内容的内边距 */
div.post-block {
    padding: 35px;
    +mobile() {padding: 25px;}
    +tablet() {padding: 25px;}
}

div.posts-collapse {margin: 0 15px;}
div.post-block p:last-child {display: none;}
blockquote p {display: block !important;}

/* 更改文章标题字号 */
.posts-expand .post-title {
    font-size: 1.65em;
    font-weight: bold;
    margin-top: -6px;

    +mobile() {
        font-size: 1.55em;
        font-weight: bold;
        margin-top: 2px;
    }

    +tablet() {
        font-size: 1.58em;
        font-weight: bold;
        margin-top: 2px;
    }
}

/* 修改侧边栏右侧徽标字号 */
span.archive-page-counter {font-size: 15px;}

/* 优化移动端顶栏显示效果 */
.site-subtitle {
    +mobile() {margin-bottom: 2px;}  
    +tablet() {margin-bottom: 2px;}  
}

.site-meta {
    +mobile() {padding-top: 16px;}
    +tablet() {padding-top: 16px;}
}

/* 强化移动端三点菜单导航按钮显示效果 */
.site-nav-toggle button {
    outline: none !important;
    +mobile() {margin-top: 1px;}    
    +tablet() {margin-top: 1px;}
}

.site-nav-toggle button:hover {background-color: #484848;}
.site-nav-toggle button:active {background-color: #484848;}

/* 返回顶部按钮样式 */
.back-to-top {
    background-color: #222;
    height: 50px;
    width: 50px;
    opacity: 1;
    box-shadow: 0 0 16px rgba(0,0,0,0.5);
}

#scrollpercent {
    font-size: 15px;  
    line-height: 50px;  
    text-align: center;
}

/* video标签的视频样式指定 */
.video-container {
    max-width: 100%;
    display: block;
    margin-left: auto;
    margin-right: auto;

    +mobile() {
        max-width: 100%; 
        display: block; 
        margin-left: auto; 
        margin-right: auto;
    }

    tablet() {
        max-width: 100%; 
        display: block; 
        margin-left: auto; 
        margin-right: auto;
    }
}

/* 修改菜单条目图标样式 */
div.back-to-top.back-to-top-on i.fa.fa-arrow-up,
div.back-to-top.back-to-top-on svg.svg-inline--fa.fa-arrow-up.fa-w-14,
svg.svg-inline--fa.fa-search.fa-w-16.menu-item-icon.fa-fw,
svg.svg-inline--fa.fa-circle.fa-w-16.menu-item-icon.fa-fw,
i.menu-item-icon.fa.fa-fw.fa-circle,
i.menu-item-icon.fa.fa-search.fa-fw {
    display: none;
}

ul.menu#menu li.menu-item.menu-item-home a,
ul.menu#menu li.menu-item.menu-item-about a,
ul.menu#menu li.menu-item.menu-item-tags a,
ul.menu#menu li.menu-item.menu-item-categories a,
ul.menu#menu li.menu-item.menu-item-archives a,
ul.menu#menu li.menu-item.menu-item-sitemap a {
    color: #282828;
    font-size: 15.5px;
    -webkit-font-smoothing: antialiased; /*chrome、safari*/
    -moz-osx-font-smoothing: grayscale; /*firefox*/
    +mobile() {font-size: 15.8px;}
    +tablet() {font-size: 15.8px;}
}

li.menu-item.menu-item-search a {
    text-align: center;
    background-color: #222;
    font-size: 15px;
    font-weight: 400;
    color: white;
    padding-top: 1px;
    padding-bottom: 1px;
    border: 0px solid #282828;
    border-radius: 17px;
    -webkit-font-smoothing: antialiased; /*chrome、safari*/
    -moz-osx-font-smoothing: grayscale; /*firefox*/
    +mobile() {font-size: 15px;}
    +tablet() {font-size: 15px;}
    box-shadow: 0 0 8px rgba(0,0,0,0.5);
    +mobile() {box-shadow: 0 0 16px rgba(0,0,0,0.5);}
    +tablet() {box-shadow: 0 0 16px rgba(0,0,0,0.5);}
}

li.menu-item.menu-item-search a:hover {
    background-color: #424242;
    color: white;
    border: 0px solid #282828;
    border-radius: 17px;
}

li.menu-item.menu-item-search {
    margin-left: 24px;
    margin-right: 24px;
    margin-top: 10px;
    margin-bottom: 20px;

    +mobile() {
        margin-left: 80px;
        margin-right: 80px;
        margin-top: 10px;
        margin-bottom: 20px;
    }

    +tablet() {
        margin-left: 220px;
        margin-right: 220px;
        margin-top: 10px;
        margin-bottom: 20px;
    }
}

ul.menu#menu li {
    padding-left: 8px;
    padding-right: 8px;

    +mobile() {
        padding-left: 12px;
        padding-right: 12px;   
    }

    +tablet() {
        padding-left: 12px;
        padding-right: 12px;   
    }
}

ul.menu#menu li.menu-item.menu-item-home.menu-item-active a,
ul.menu#menu li.menu-item.menu-item-about.menu-item-active a,
ul.menu#menu li.menu-item.menu-item-tags.menu-item-active a,
ul.menu#menu li.menu-item.menu-item-categories.menu-item-active a,
ul.menu#menu li.menu-item.menu-item-archives.menu-item-active a,
ul.menu#menu li.menu-item.menu-item-sitemap.menu-item-active a, {
    background-color: #F0F0F0;
    color: black;
    font-weight: 700;
    border: 0px solid #F0F0F0;
    border-radius: 6px;
    -webkit-font-smoothing: antialiased; /*chrome、safari*/
    -moz-osx-font-smoothing: grayscale; /*firefox*/
    +mobile() {font-size: 15.8px;}
    +tablet() {font-size: 15.8px;}
}

/* 调整“阅读全文”按钮外边距 */
div.post-button.text-center {
    margin-top: 4px;
    margin-bottom: 2px;

    +mobile() {
        margin-top: 10px;
        margin-bottom: 8px;
    }

    +tablet() {
        margin-top: 10px;
        margin-bottom: 8px;
    }  
}

/* 优化正文字间距，尝试增强其可读性 */
div.post-body p {
    font-size: 15px;
    word-break: break-all;
    word-wrap: break-word;
    white-space: pre-line;

    +mobile() {
	    font-size: 15px;
        text-align: justify; !important
        word-break: break-all;
        word-wrap: break-word;
        white-space: pre-line;
        text-justify: inter-ideograph;
        letter-spacing: 0.05px;
        word-spacing: -1.5px;
    }

	+tablet() {
        font-size: 15px;
        text-align: justify; !important
        word-break: break-all;
        word-wrap: break-word;
        white-space: pre-line;
        text-justify: inter-ideograph;
        letter-spacing: 0.05px;
        word-spacing: -1.5px;
    }
}

div.post-body li {
    font-size: 15px;
    text-align: justify; !important
    word-break: break-all;
    word-wrap: break-word;
    white-space: pre-line;
    text-justify: inter-ideograph;
    letter-spacing: 0.05px;
    word-spacing: -1.5px;
}

div.post-body ol {padding-left: 12px;}

a, button, input, textarea {-webkit-tap-highlight-color: rgba(0,0,0,0);}

/* 关于页面优化 */
div#about-content {
    margin-top: -26px;
    margin-bottom: 5px;
    font-size: 15px;
    line-height: 1.6;
}

div#about-content img {
    display: inline-block;
    margin-bottom: 0px;
    width: 115px;
    height: 115px;
    text-align: center;
}

div#about-content div#app-about-info {margin-bottom: 0px;}
div#about-content div#app-about-info hr {
    color: #B0B0B0;
    width: 40px;
    margin: 18px 0;
}

/* 优化评论区显示效果 */
textarea#veditor.veditor.vinput {
    +mobile() {height: 100px;}
}

/* 优化归档页面显示效果 */
div.post-block.archive {
    +mobile() {padding: 26px 24px 25px 24px;}
    +tablet() {padding: 26px 24px 25px 24px;}   
}

/* 按钮样式调整 */
a.btn {
    border: 1px solid #222;
    color: #222;
    font-size: 15px;
}

/* 底部文字样式 */
div.theme-info strong {
    font-weight: 600;
    background: #222;
    color: white;
    border: 1px solid #222;
    border-radius: 4px;
    padding: 1px;
}

/* 侧边栏按钮显示图标 */
ul.menu#menu strong {font-size: 16px;}

/* 底部文字优化 */
.footer {color: #222;}
body {background: url('/images/crossline.png') repeat center whitesmoke}
div.header-inner, div.post-block, div.sidebar-inner, .page-post-detail .comments, nav.pagination, a.btn, 
div#local-search-result {background-color: whitesmoke}
li.tab, li.tab.active {background-color: whitesmoke !important}
.highlight, pre, div.note {background-color: #E6E6E6 !important}
.post-body h1, .post-body h2, .post-body h3, .post-body h4, .post-body h5, .post-body h6 {border-bottom: 1px solid #E6E6E6}
blockquote {border-left: 4px solid lightgrey}
/* 设置站点标题字体和字号 */
.site-title {
    font-size: 30px !important;
    font-weight: 500;
    +tablet-mobile() {font-size: 24px !important}
}

.posts-expand .post-meta {margin-bottom: 20px}
/* 更改文章内容的内边距 */
div.post-block {
    padding: 35px;
    +tablet-mobile() {padding: 25px}
}

/* 页面格式微调 */
div.posts-collapse {margin: 0 15px}
div.post-block p:last-child {display: none}
blockquote ol {margin-left: -2px}
/* 修复由于禁用显示最后一个<p>标签导致的内容为空问题 */
blockquote p, div.note p, div.tab-pane p, div.tab-pane.active p, p.image-caption {display: block !important}
div.post-body div.tabs {padding-top: 0px}
/* 更改文章标题字号 */
.posts-expand .post-title {
    font-size: 1.65em;
    font-weight: 700;
    margin-top: -6px;
    +mobile() {font-size: 1.55em; margin-top: 2px}
    +tablet() {font-size: 1.58em; margin-top: 2px}
}

/* 优化移动端顶栏显示效果 */
.site-subtitle {+tablet-mobile() {margin-bottom: 2px}}
.site-meta {+tablet-mobile() {padding-top: 16px}}
/* 强化移动端三点菜单导航按钮显示效果 */
.site-nav-toggle button {
    outline: none !important;
    +tablet-mobile() {margin-top: 1px}    
}

/* 菜单按钮点按样式 */
.site-nav-toggle button:hover, .site-nav-toggle button:active {background-color: #484848}
/* 返回顶部按钮样式 */
.back-to-top {
    padding: 0px;
    background-color: #222;
    height: 44px;
    width: 44px;
    opacity: 1;
    box-shadow: 0 0 16px rgba(0,0,0,0.5);
    border-radius: 22px;
    +tablet-mobile() {
        height: 46px;
        width: 46px;
        border-radius: 23px;
    }
}

.fa-arrow-up {
    margin-top: 5px;
    height: 34px;
    width: 34px;
    +tablet-mobile() {
        height: 36px;
        width: 36px;
    }
}

.fa-arrow-up:before {
    display: inline-block;
    content: url('/images/arrow-up-34.svg');
    height: 34px;
    width: 34px;
    padding: 0px; 
    +tablet-mobile() {
        content: url('/images/arrow-up-36.svg');
        height: 36px;
        width: 36px;
    };
}

/* 修改菜单条目图标样式 */
i.menu-item-icon.fa.fa-fw.fa-circle {display: none}
/* 菜单外边框 */
ul.menu#menu li {
    padding-left: 8px;
    padding-right: 8px;
    +tablet-mobile() {
        padding-left: 12px;
        padding-right: 12px;   
    }
}

/* 修改菜单显示文字大小、颜色和平滑度  */
ul.menu#menu li.menu-item.menu-item-home a,
ul.menu#menu li.menu-item.menu-item-about a,
ul.menu#menu li.menu-item.menu-item-tags a,
ul.menu#menu li.menu-item.menu-item-categories a,
ul.menu#menu li.menu-item.menu-item-archives a {
    color: #222;
    font-size: 15.5px;
    border-bottom: transparent;
}

ul.menu#menu li.menu-item.menu-item-search a {
    margin: 4px 20px auto 20px;
    padding-top: 0px;
    padding-bottom: 0px;
    font-weight: 700;
    text-align: center;
    font-size: 15px;
    color: grey;
    background-color: #E6E6E6;
    border-bottom: transparent;
}

ul.menu#menu li.menu-item.menu-item-home.menu-item-active a,
ul.menu#menu li.menu-item.menu-item-about.menu-item-active a,
ul.menu#menu li.menu-item.menu-item-tags.menu-item-active a,
ul.menu#menu li.menu-item.menu-item-categories.menu-item-active a,
ul.menu#menu li.menu-item.menu-item-archives.menu-item-active a {
    font-weight: 700;
    font-size: 15.5px;
    background-color: transparent;
}

.menu .menu-item a:hover:after, .menu .menu-item span.exturl:hover:after,
.menu-item-active a:after {right: 21px}

/* 调整“阅读全文”按钮外边距 */
div.post-button.text-center {
    margin-top: 4px;
    margin-bottom: 1px;
    +tablet-mobile() {
        margin-top: 10px;
        margin-bottom: 9px;
    }
}

/* 优化正文字间距，尝试增强其可读性 */
div.post-body p, div.post-body li {
    font-size: 15px;
    word-break: break-all;
    word-wrap: break-word;
    letter-spacing: 0.05px;
    word-spacing: -1.5px;
}

/* 设置列表左侧内边距 */
div.post-body ol {padding-left: 12px}
ul {padding-left: 20px}
/* 设置移动端按钮点击时浏览器样式 */
a, button, input, textarea, div.back-to-top.back-to-top-on {
    outline: none;
    -webkit-tap-highlight-color: rgba(0,0,0,0);
}

/* 优化归档页面显示效果 */
div.post-block.archive, div.post-block.category, div.post-block.tag {
    padding: 35px;
    +tablet-mobile() {padding: 26px 23px}  
}

/* 微调归档页面、分类页面指示器图标位置 */
span.archive-move-on {+tablet-mobile() {top: 12.5px !important}}
div.collection-title::before {+tablet-mobile() {top: 49.5% !important}}
/* 按钮样式调整 */
a.btn {
    border: 1px solid #222;
    color: #222;
    font-size: 15px;
}

/* 侧边栏按钮显示图标 */
ul.menu#menu strong {font-size: 16px}
/* 鼠标样式 */
* {cursor: url('/images/round-cursor.png') 12 12, auto !important}
:active, :hover, :focus, :visited, :checked, :default, :empty, :enabled, :disabled, :link, 
:target, :required {cursor: url('/images/round-cursor.png') 12 12, auto !important}
/* 滚动条样式 */
::-webkit-scrollbar {width: 8px !important; height: 4px !important; background: #BFBFBF !important}
::-webkit-scrollbar-thumb {border-radius: 0px !important; background: #222 !important}
/* 调整翻页页码字符大小 */
span.page-number.current, a.page-number {font-size: 15px}
/* 标题间隔 */
.posts-expand .post-body h2, .posts-expand .post-body h3, .posts-expand .post-body h4, 
.posts-expand .post-body h5, .posts-expand .post-body h6 {padding-top: 2px; margin-top: 15px}
hr {background-image: repeating-linear-gradient(-45deg,#f5f5f5,#f5f5f5 4px,transparent 4px,transparent 8px)}
/* 分类页面优化 */
.category-all-page .category-list-count:before {content: " - 已上传文章篇数: "}
.category-all-page .category-list-count:after {content: " "}
.category-all-page .category-list {+tablet-mobile() {text-align: center}}
/* 评论区优化 */
div#lv-container {
    margin-bottom: -38px;
    +tablet-mobile() {margin-top: 9px; padding-left: 20px; padding-right: 20px}
}
/* 底部信息栏优化 */
footer#footer.footer {
    padding-bottom: 0px; 
    padding-top: 12px;
    +tablet-mobile() {padding-top: 0px}
}

i.fa.fa-user:before, i.fa.fa-eye:before {display: none}
div.footer-inner {
    margin-left: 0px !important; 
    width: calc(100% - 0px) !important;
    background-color: #222;
    color: #fff;
    padding: 8px 0px;
}
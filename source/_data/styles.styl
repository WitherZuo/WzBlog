/* 优化部分元素字号，尝试增强其可读性 */
.post-body, .btn, .pagination, table, pre code, .menu li a {
    font-size: 1em;  
}

/* 修改顶部栏上下边距和背景颜色 */
.header {
    background: #222;
}

.header-inner {
    padding: 60px 0;
}

/* 改变导航栏菜单项目的基础样式 */
.site-nav {
    background: #222; 
    border-color: #222;
}

.menu {
    margin-bottom: 0; 
    text-align: center;
}

.menu li a {
    color: #fff !important; 
    padding: 0 12px;
}

.menu-item-active a, .menu .menu-item a:hover {
    border-bottom: 1px solid transparent!important; 
    background: #484848;
}

/* 修改站点标题样式 */
.site-title {
    font-weight: 700; 
    font-size: 25.5px;
}

/* 文章标题加粗 */
.post-header .post-title {
    font-weight: 700;
}

/* 减小文章属性下方边距 */
.post-meta {
    margin: 3px 0 20px !important;
}

/* 滚动条样式 */
::-webkit-scrollbar {
    width: 15px; 
    background: #BFBFBF;
}

::-webkit-scrollbar-thumb {
    background: #222;
}

html {
    scrollbar-color: #767676 #1e1e1f;
}

/* 强化移动端导航按钮显示效果 */
.toggle {
    opacity: 1 !important;
}

.site-nav-toggle .toggle, .site-nav-right .toggle {
    color: #fff; 
    font-size: 18px;
}

.site-nav-toggle .toggle .fa-bars::before, .site-nav-right .toggle .fa-search::before {
    margin-left: -8px;
}

/* 分类页面优化 */
.category-all-page {
    text-align: center;
}

.category-all-page .category-list-count {
    display: none;
}

/* 修改底部说明文字块样式 */
.footer, .footer a {color: #fff; 
    background: #222; 
    font-size: 15px;
}

/* 侧边栏阴影效果取消和背景颜色修改 */
.sidebar {
    background: #111;
}

/* 侧边栏切换按钮样式修改修改 */
.sidebar-toggle {
    border: 8px solid;
}

.sidebar-toggle .toggle-line {
    display: none;
}

/* 分页指示器调整 */
.pagination {
    height: 33px !important; 
    margin-bottom: 0; 
    margin-top: 50px;
}

.pagination .page-number.current {
    background: #222; 
    border-top: 1px solid #222; 
    border-bottom: 1px solid #222;
}

/* 修改页面主体容器 取消部分页面上下内边距 取消归档、分类页面最后条目的底部外边距 */
.main-inner {
    padding-top: 40px; 
    padding-bottom: 56px;
}

.content {
    padding-top: 0;
}

.main-inner .posts-expand, .main-inner .posts-collapse {
    padding-top: 0; 
    padding-bottom: 0;
}

.posts-collapse article:last-of-type .post-header, .category-list-item:last-of-type {
    margin-bottom: 0;
}

/* 返回顶部 */
.sidebar-inner .back-to-top.motion-element .fa-arrow-up:before {
    content: "\f0aa" !important;
}

.back-to-top {
    font-size: 38px;    
    margin: 20px -10px -20px;
}

/* 暗色模式微调 */
@media (prefers-color-scheme: dark) {
    blockquote {
        color: #ddd;
    }

    kbd {
        color: #222;
    }

    .search-popup .search-header {
        background: #222;
    }

    .site-search input.search-input {
        color: #f5f5f5;
    }

    .search-popup .popup-btn-close:hover .fa {
        color: #f5f5f5;
    }

    .comments {
        filter: invert(1);
    }

    span.vtime {
        color: #555 !important;
    }

    ::-webkit-scrollbar {
        background: #444;
    }
}

/* PWA更新条样式 */
.app-refresh {
    background: #000; 
    height: 0; 
    line-height: 3em; 
    overflow: hidden; 
    position: fixed; 
    top: 0; 
    left: 0; 
    right: 0; 
    z-index: 42; 
    padding: 0 1em; 
    transition: all .3s ease;
}

.app-refresh-wrap {
    display: flex; 
    color: #fff;
}

.app-refresh-wrap label {
    flex: 1;
}

.app-refresh-show {
    height: 3em;
}